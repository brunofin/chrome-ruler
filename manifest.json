{
	"manifest_version": 2,
	"name": "Chrome Ruler",
	"version": "0.1",

	"description": "A good old grid/ruler for Chrome browser",
	"icons": {
		"16": "assets/icon_16.png",
		"48": "assets/icon_48.png",
		"128": "assets/icon_128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "assets/icon_16.png",
			"38": "assets/icon_36.png"
		},
		"default_title": "Chrome Ruler"
	},

	"permissions": [
		"activeTab"
	],

	"background": {
		"scripts": ["./chrome/background.js"],
		"persistent": false
	}
}
