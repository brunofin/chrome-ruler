{
	"manifest_version": 2,

	"name": "Chrome Ruler",
	"version": "0.1",
	"description": "A good old grid / ruler for Chrome browser",

	"icons": {
		"128": "128_trans.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "38_trans.png",
			"39": "38_trans.png"
		},
		"default_title": "Chrome Ruler"
	},

	"permissions": [
		"activeTab"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
}
